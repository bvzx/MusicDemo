<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/musicbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/playbar_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/nact_icn_music"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/nact_icn_music" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/nact_icn_music"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="demo" />

        <TextView
            android:id="@+id/music_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="demo"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right">

        <ImageButton
            android:id="@+id/playbar_btn_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/playbar_btn_prev" />

        <CheckBox
            android:id="@+id/playbar_btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/playbutton"
            android:button="@null"
            android:checked="false" />

        <ImageButton
            android:id="@+id/playbar_btn_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/playbar_btn_next" />
    </LinearLayout>
</RelativeLayout>